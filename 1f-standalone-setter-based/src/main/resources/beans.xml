<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean class="com.skbr.Pizza">
<property name="type" value="mexican"></property>
<property name="topping" ref="cheeseTopping"></property>
</bean>

<bean id="cheeseTopping" class="com.skbr.Topping">
<constructor-arg value="cheese"></constructor-arg>
</bean>

</beans>
